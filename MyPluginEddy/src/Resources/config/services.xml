<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- hier wird der Scheduled Task Registriert -->
        <service id="MyPluginEddy\ShowTimeTask" public="true">
            <tag name="shopware.scheduled_task"/>
        </service>

        <!-- hier wird der Handler Task Registriert -->
        <service id="MyPluginEddy\ShowTimeTaskHandler">
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
